# Application Config
PORT=3000
NODE_ENV=production
CORS_ORIGIN=https://dialer.yourdomain.com

# Security
JWT_SECRET=input-random-32-char-string-here
JWT_EXPIRY=8h

# Database (PostgreSQL)
DATABASE_URL=postgres://user:password@localhost:5432/global_dialer

# Redis (Queues & Cache)
REDIS_URL=redis://localhost:6379

# Telephony Providers
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
SIP_TRUNK_EG_01=sip:trunk-eg.provider.com
SIP_TRUNK_SA_01=sip:trunk-sa.provider.com

# Compliance
# AWS S3 for WORM Audit Logs
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=me-central-1
AUDIT_BUCKET_NAME=compliance-audit-logs
